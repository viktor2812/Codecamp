  <div class="col-md-6 col-sm-6 col-xs-12 form-group">
    <%= f.label :net_monthly_salary, 'Salario neto' %><br>
    <%= f.text_field :net_monthly_salary, :class=>"form-control" %>
  </div>
  <div class="col-md-6 col-sm-6 col-xs-12 form-group">
