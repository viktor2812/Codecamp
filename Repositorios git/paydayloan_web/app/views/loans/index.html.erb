<%- model_class = Loan -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:employee_id) %></th>
      <th><%= model_class.human_attribute_name(:net_salary) %></th>
      <th><%= model_class.human_attribute_name(:interest) %></th>
      <th><%= model_class.human_attribute_name(:max_credit) %></th>
      <th><%= model_class.human_attribute_name(:period) %></th>
      <th><%= model_class.human_attribute_name(:capital_requisition) %></th>
      <th><%= model_class.human_attribute_name(:date_requisition) %></th>
      <th><%= model_class.human_attribute_name(:capital_to_pay) %></th>
      <th><%= model_class.human_attribute_name(:balance) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= link_to loan.id, loan_path(loan) %></td>
        <td><%= loan.employee_id %></td>
        <td><%= loan.net_salary %></td>
        <td><%= loan.interest %></td>
        <td><%= loan.max_credit %></td>
        <td><%= loan.period %></td>
        <td><%= loan.capital_requisition %></td>
        <td><%= loan.date_requisition %></td>
        <td><%= loan.capital_to_pay %></td>
        <td><%= loan.balance %></td>
        <td><%= loan.status %></td>
        <td><%=l loan.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_loan_path(loan), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      loan_path(loan),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_loan_path,
            :class => 'btn btn-primary' %>
